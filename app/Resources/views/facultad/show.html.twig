{% extends 'base.html.twig' %}

{% block title %}Consultar Facultad{% endblock %}
{% block encabezado %}Consultar Facultad{% endblock %}

{% block article %}
    <div class="table-responsive">
        <table class="table table-hover">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facultad.id }}</td>
            </tr>
            <tr>
                <th>{{ "Nombre"|trans }}</th>
                <td>{{ facultad.nombre }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="text-center">
        {{ form_start(delete_form) }}
        <a href="{{ path('facultad_edit', { 'id' : facultad.id }) }}" title="Editar" class="btn btn-warning">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Editar
        </a>
        <button type="submit" onclick="return confirm('¿Está seguro?')" class="btn btn-danger">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Eliminar
        </button>
        <a href="{{ path('facultad_index') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
            Lista
        </a>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
