{% extends 'base.html.twig' %}

{% block title %}Consultar Clase{% endblock %}
{% block encabezado %}Consultar Clase{% endblock %}

{% block article %}
    <div class="table-responsive">
        <table class="table table-hover">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ clase.id }}</td>
            </tr>
            <tr>
                <th>Lugar</th>
                <td>{{ clase.lugar }}</td>
            </tr>
            <tr>
                <th>Fecha Inicio</th>
                <td>{{ clase.fechaInicio | date('Y-m-d H:i') }}</td>
            </tr>
            <tr>
                <th>Fecha Fin</th>
                <td>{{ clase.fechaFin | date('Y-m-d H:i') }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ clase.estado }}</td>
            </tr>
            <tr>
                <th>Materia</th>
                <td>{{ clase.materia }}</td>
            </tr>
            <tr>
                <th>Grupo</th>
                <td>{{ clase.grupo }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ clase.observaciones }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="text-center">
        {{ form_start(delete_form) }}
        <a href="{{ path('clase_edit', { 'id' : clase.id }) }}" title="Editar" class="btn btn-warning">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Editar
        </a>
        <button type="submit" onclick="return confirm('¿Está seguro?')" class="btn btn-danger">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Eliminar
        </button>
        <a href="{{ path('clase_index') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
            Lista
        </a>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}