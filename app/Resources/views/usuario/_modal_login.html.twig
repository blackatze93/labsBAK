<!-- Modal -->
<div class="modal fade" id="login" role="dialog" tabindex="-1" aria-labelledby="loginLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="loginLabel">Iniciar sesión</h4>
            </div>
            <div class="modal-body">
                <form class="form-signin" action="{{ path('usuario_login_check') }}" method="post">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-user"></i>
                            </span>
                            <input type="text" class="form-control" id="username_modal" placeholder="Identificación" name="_username" value="{{ last_username }}" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-lock"></i>
                            </span>
                            <input type="password" class="form-control" id="password_modal" placeholder="Contraseña" name="_password" required>
                        </div>
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" id="no_cerrar_modal" name="_remember_me" checked>No cerrar sesión</label>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Iniciar sesión">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
