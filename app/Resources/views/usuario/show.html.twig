{% extends 'base.html.twig' %}

{% block title %}Consultar Usuario{% endblock %}

{% block article %}
    <h3 class="encabezado">Consultar Usuario</h3><br>
    <div class="table-responsive">
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>{{ "Id"|trans }}</th>
                    <td>{{ usuario.id }}</td>
                </tr>
                <tr>
                    <th>{{ "Nombre"|trans }}</th>
                    <td>{{ usuario.nombre }}</td>
                </tr>
                <tr>
                    <th>{{ "Apellido"|trans }}</th>
                    <td>{{ usuario.apellido }}</td>
                </tr>
                <tr>
                    <th>{{ "Email"|trans }}</th>
                    <td>{{ usuario.email }}</td>
                </tr>
                <tr>
                    <th>{{ "Dependencia"|trans }}</th>
                    <td>{{ usuario.dependencia }}</td>
                </tr>
                <tr>
                    <th>{{ "Cargo"|trans }}</th>
                    <td>{{ usuario.cargo|trans }}
                    </td>
                </tr>
                <tr>
                    <th>{{ "Funciones"|trans }}</th>
                    <td>{{ usuario.funciones }}</td>
                </tr>
                <tr>
                    <th>Fecha de Alta</th>
                    <td>{{ usuario.fechaAlta|date("H:i:s d-m-Y") }}</td>
                </tr>
                <tr>
                    <th>{{ "Esta activo"|trans }}</th>
                    <td>{{ usuario.estaActivo }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="text-center">
        {{ form_start(delete_form) }}
        <a href="{{ path('usuario_edit', { 'id' : usuario.id }) }}" title="Editar" class="btn btn-warning">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Editar
        </a>
        <button type="submit" onclick="return confirm('¿Está seguro?')" class="btn btn-danger">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Eliminar
        </button>
        <a href="{{ path('usuario_index') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            Volver
        </a>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}