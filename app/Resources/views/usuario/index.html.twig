{% extends 'base.html.twig' %}

{% block title %}Lista de Usuarios{% endblock %}

{% block article %}
    <div class="table-responsive">
        <p class="text-center">
            <a class="btn btn-success" href="{{ path('usuario_new') }}">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                Nuevo Usuario
            </a>
        </p>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Dependencia</th>
                    <th>Cargo</th>
                    <th>Fecha Alta</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for usuario in usuarios %}
                    <tr>
                        <td>{{ usuario.id  }}</td>
                        <td>{{ usuario.nombre  }}</td>
                        <td>{{ usuario.apellido  }}</td>
                        <td>{{ usuario.email  }}</td>
                        <td>{{ usuario.dependencia  }}</td>
                        <td>{{ usuario.cargo | replace({
                                "ROLE_ADMIN" : "Administrador",
                                "ROLE_DOCENTE" : "Docente",
                                "ROLE_ADMINISTRATIVO" : "Administrativo"})
                            }}
                        </td>
                        <td>{{ usuario.fechaAlta|date("H:i:s d-m-Y") }}</td>
                        <td>
                            <button title="Consultar" class="btn btn-sm btn-info">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            </button>
                            <button title="Editar" class="btn btn-sm btn-warning">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                            <button title="Eliminar" class="btn btn-sm btn-danger">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}