{% extends 'base.html.twig' %}

{% block title %}Ingreso al sistema{% endblock %}

{% block article %}
    {% if error %}
        <div class="alert alert-danger alert-dismissable fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>{{ error.message | replace({"Bad credentials." : "Nombre de usuario o contraseña inválidos."}) }}</strong>
        </div>
    {% endif %}
    <form class="form-signin" action="{{ path('usuario_login_check') }}" method="post">
        <div class="form-group">
            <label for="username">Identificación:</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required autofocus>
        </div>
        <div class="form-group">
            <label for="password">Contraseña:</label>
            <input type="password" class="form-control" id="password" name="_password" required>
        </div>
        <div class="checkbox">
            <label><input type="checkbox" id="no_cerrar" name="_remember_me" checked>No cerrar sesión</label>
        </div>
        <input class="btn btn-lg btn-primary btn-block" type="submit" name="login" value="Iniciar sesión">
    </form>
{% endblock %}