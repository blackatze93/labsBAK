{% extends 'base.html.twig' %}

{% block article %}
    <h1>Evento</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evento.id }}</td>
            </tr>
            <tr>
                <th>Fecha_inicio</th>
                <td>{{ evento.fechainicio|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fecha_fin</th>
                <td>{{ evento.fechafin|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ evento.tipo }}</td>
            </tr>
            <tr>
                <th>Materia</th>
                <td>{{ evento.materia }}</td>
            </tr>
            <tr>
                <th>Grupo</th>
                <td>{{ evento.grupo }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ evento.observaciones }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('evento_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('evento_edit', { 'id': evento.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
