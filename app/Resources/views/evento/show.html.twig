{% extends 'base.html.twig' %}

{% block title %}Consultar Evento{% endblock %}
{% block encabezado %}Consultar Evento{% endblock %}

{% block article %}
    <div class="table-responsive">
        <table class="table table-hover">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evento.id }}</td>
            </tr>
            <tr>
                <th>Lugar</th>
                <td>{{ evento.lugar }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ evento.fecha | date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Hora Inicio</th>
                <td>{{ evento.horaInicio | date('H:i') }}</td>
            </tr>
            <tr>
                <th>Hora Fin</th>
                <td>{{ evento.horaFin | date('H:i') }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ evento.estado }}</td>
            </tr>
            <tr>
                <th>Materia</th>
                <td>{{ evento.materia }}</td>
            </tr>
            <tr>
                <th>Grupo</th>
                <td>{{ evento.grupo }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ evento.observaciones }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="text-center">
        {{ form_start(delete_form) }}
        <a href="{{ path('evento_edit', { 'id' : evento.id }) }}" title="Editar" class="btn btn-warning">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Editar
        </a>
        <button type="submit" onclick="return confirm('¿Está seguro?')" class="btn btn-danger">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Eliminar
        </button>
        <a href="{{ path('evento_index') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
            Lista
        </a>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
