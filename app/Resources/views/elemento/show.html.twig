{% extends 'base.html.twig' %}

{% block title %}Consultar Elemento{% endblock %}
{% block encabezado %}Consultar Elemento{% endblock %}

{% block article %}
    <div class="table-responsive">
        <table class="table table-hover">
            <tbody>
            <tr>
                <th>{{ "Id"|trans }}</th>
                <td>{{ elemento.id }}</td>
            </tr>
            <tr>
                <th>{{ "Nombre"|trans }}</th>
                <td>{{ elemento.nombre }}</td>
            </tr>
            <tr>
                <th>Marca</th>
                <td>{{ elemento.marca }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ elemento.descripcion }}</td>
            </tr>
            <tr>
                <th>Serial</th>
                <td>{{ elemento.serial }}</td>
            </tr>
            <tr>
                <th>Lugar</th>
                <td>{{ elemento.lugar }}</td>
            </tr>
            <tr>
                <th>Fecha de Ingreso</th>
                <td>
                    {% if elemento.fechaIngreso is not empty %}
                        {{ elemento.fechaIngreso | date('Y-m-d') }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ elemento.tipo }}</td>
            </tr>
            <tr>
                <th>Tipo de Préstamo</th>
                <td>{{ elemento.tipoPrestamo }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ elemento.observaciones }}</td>
            </tr>

            </tbody>
        </table>
    </div>
    <div class="text-center">
        {{ form_start(delete_form) }}
        <a href="{{ path('elemento_edit', { 'id' : elemento.id }) }}" title="Editar" class="btn btn-warning">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Editar
        </a>
        <button type="submit" onclick="return confirm('¿Está seguro?')" class="btn btn-danger">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Eliminar
        </button>
        <a href="{{ path('elemento_index') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
            Lista
        </a>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
