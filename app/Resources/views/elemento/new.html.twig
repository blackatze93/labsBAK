{% extends 'base.html.twig' %}
{% form_theme formulario 'form/fields.html.twig' %}

{% block title %}Nuevo Elemento{% endblock %}
{% block encabezado %}Nuevo Elemento{% endblock %}

{% block article %}
    {{ form_start(formulario) }}
    {% if not formulario.vars.valid %}
        <script>
            notificacion('Hay errores en el formulario', 'error');
        </script>
    {% endif %}
    <div class="form-group">
        {{ form_label(formulario.id) }}
        {{ form_widget(formulario.id, {'attr' : {'class' : 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(formulario.id) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(formulario.nombre) }}
        {{ form_widget(formulario.nombre, {'attr' : {'class' : 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(formulario.nombre) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(formulario.marca) }}
        {{ form_widget(formulario.marca, {'attr' : {'class' : 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(formulario.marca) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(formulario.descripcion) }}
        {{ form_widget(formulario.descripcion, {'attr' : {'class' : 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(formulario.descripcion) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(formulario.serial) }}
        {{ form_widget(formulario.serial, {'attr' : {'class' : 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(formulario.serial) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(formulario.lugar) }}
        {{ form_widget(formulario.lugar, {'attr' : {'class' : 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(formulario.lugar) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(formulario.fechaIngreso) }}
        {{ form_widget(formulario.fechaIngreso, {'attr' : {'class' : 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(formulario.fechaIngreso) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(formulario.estado) }}
        {{ form_widget(formulario.estado, {'attr' : {'class' : 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(formulario.estado) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(formulario.tipo) }}
        {{ form_widget(formulario.tipo, {'attr' : {'class' : 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(formulario.tipo) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(formulario.tipoPrestamo) }}
        {{ form_widget(formulario.tipoPrestamo, {'attr' : {'class' : 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(formulario.tipoPrestamo) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(formulario.observaciones) }}
        {{ form_widget(formulario.observaciones, {'attr' : {'class' : 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(formulario.observaciones) }}</span>
    </div>
    <div class="text-center">
        {{ form_widget(formulario.crear, {'attr' : {'class' : 'btn btn-success'}, 'label' : '<span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Crear'}) }}
        {{ form_widget(formulario.restablecer, {'attr' : {'class' : 'btn btn-warning'}, 'label' : '<span class="glyphicon glyphicon-repeat" aria-hidden="true"></span> Restablecer'}) }}
        <a href="{{ path('elemento_index') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
            Lista
        </a>
    </div>

    {{ form_end(formulario) }}
{% endblock %}
