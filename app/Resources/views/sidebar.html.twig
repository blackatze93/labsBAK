                    </a>
                </li>
                <li class="">
                    <a href="" >
                        <i class="fa fa-search"></i><span>Objetos Encontrados</span>
                    </a>
                </li>
                <li class="{{ route == 'paz_y_salvo' ? 'active' }}">
                    <a href="{{ path('paz_y_salvo') }}" >
                        <i class="fa fa-file-pdf-o"></i><span>Paz y Salvos</span>
                    </a>
                </li>
            </ul>
        {% endif %}
    {% endblock main_menu_wrapper %}
</section>
