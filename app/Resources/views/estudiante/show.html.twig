{% extends 'base.html.twig' %}

{% block title %}Consultar Estudiante{% endblock %}
{% block encabezado %}Consultar Estudiante{% endblock %}

{% block article %}
    <div class="table-responsive">
        <table class="table table-hover">
            <tbody>
            <tr>
                <th>{{ "Id"|trans }}</th>
                <td>{{ estudiante.id }}</td>
            </tr>
            <tr>
                <th>{{ "Nombre"|trans }}</th>
                <td>{{ estudiante.nombre }}</td>
            </tr>
            <tr>
                <th>{{ "Apellido"|trans }}</th>
                <td>{{ estudiante.apellido }}</td>
            </tr>
            <tr>
                <th>{{ "Email"|trans }}</th>
                <td>{{ estudiante.email }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ estudiante.estado }}</td>
            </tr>
            <tr>
                <th>Proyecto Curricular</th>
                <td>{{ estudiante.proyectocurricular }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="text-center">
        {{ form_start(delete_form) }}
        <a href="{{ path('estudiante_edit', { 'id' : estudiante.id }) }}" title="Editar" class="btn btn-warning">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Editar
        </a>
        <button type="submit" onclick="return confirm('¿Está seguro?')" class="btn btn-danger">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Eliminar
        </button>
        <a href="{{ path('estudiante_index') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
            Lista
        </a>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
